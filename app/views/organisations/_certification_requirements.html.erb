<div class="dashboard-user-card">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="requirements-title-container">
          <h4>Certification requirements</h4>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <div class="dashboard-user-feature">
          <div id="interview_completed" class="dashboard-user-feature-icon-container <%= active_feature?(@interview, "interview_completed") %>">
            <%= image_tag "typewriter.png", class: "dashboard-user-feature-icon", id: "interview_completed" %>
          </div>
          <div class="dashboard-user-feature-text">
            <span>Interview Completed</span>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="dashboard-user-feature">
          <div id="documents_submitted" class="dashboard-user-feature-icon-container  <%= active_feature?(@interview, "documents_submitted")%>">
            <%= image_tag "folder.png", class: "dashboard-user-feature-icon", id: "documents_submitted" %>
          </div>
          <div class="dashboard-user-feature-text">
            <span>Documents submitted</span>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="dashboard-user-feature">
          <div id="documents_validated" class="dashboard-user-feature-icon-container activable-feature <%= active_feature?(@interview, "documents_validated")%>">
            <%= image_tag "diploma.png", class: "dashboard-user-feature-icon", id: "documents_validated" %>
          </div>
          <div class="dashboard-user-feature-text">
            <span>Documents validated</span>
          </div>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-xs-4">
        <div class="dashboard-user-feature">
          <div id="agreement_signed" class="dashboard-user-feature-icon-container activable-feature <%= active_feature?(@interview, "agreement_signed")%>">
            <%= image_tag "agreement.png", class: "dashboard-user-feature-icon", id: "agreement_signed" %>
          </div>
          <div class="dashboard-user-feature-text">
            <span>G. Agreement signed</span>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="dashboard-user-feature">
          <div id="lease_provided" class="dashboard-user-feature-icon-container activable-feature <%= active_feature?(@interview, "lease_provided")%>">
            <%= image_tag "court.png", class: "dashboard-user-feature-icon", id: "lease_provided" %>
          </div>
          <div class="dashboard-user-feature-text">
            <span>Lease provided</span>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="dashboard-user-feature">
          <div id="lease_signed" class="dashboard-user-feature-icon-container activable-feature <%= active_feature?(@interview, "lease_signed")%>">
            <%= image_tag "act.png", class: "dashboard-user-feature-icon", id: "lease_signed" %>
          </div>
          <div class="dashboard-user-feature-text">
            <span>Lease signed</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

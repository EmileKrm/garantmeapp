<!-- Page title-->
<% content_for(:title_tag) do %>
  Garantme - Identification
<% end %>
<!-- End of page title-->
<div class="container-margin-top">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div id="flash"><%= f.error_notification %></div>
  <div class="row">
    <div class="col-sx-12 col-sm-4 col-sm-offset-4">
      <div class="login-form">
        <h2>Sign up</h2>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: "example@mail.com" %>
            <%= f.input :password, placeholder: "•••••••", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true, placeholder: "•••••••" %>

            <% puts "++++++++++" + organisation_id = Organisation.first.id.to_s  %>

            <%= f.hidden_field :organisation_id, value: "1" %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

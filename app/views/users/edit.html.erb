<div class="container body-container-no-footer">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 ">
      <%= simple_form_for(@user) do |f| %>
        <br>
        <div class ="user-edit-form">
          <%= f.input :email %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :phone_number %>
          <%= f.input :home_address %>
          <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 60,
                              end_year: Date.today.year - 12, order: [:day, :month, :year] %>
          <%= f.input :photo, as: :attachinary %>
        <br>
          <%= f.submit %>
        <br><br><br><br>
        </div>
      <% end %>
    </div>
  </div>
</div>

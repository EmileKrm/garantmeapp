<!-- Your banner code -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(236, 233, 230,0.6) 0%, rgba(255, 255, 255,0.6) 50%), url('<%= cl_image_path("Garantme/card-paris") %>')">

  <div class="banner-content" id="home-banner">
    <div class="logo">
      <%= cl_image_tag("Garantme/logo-garantme") %>
    </div>
    <h2>Lease guarantees for international students</h2>
    <% if user_signed_in? %>
      <%= link_to "Get a guarantor", new_interview_path, class: 'btn btn-primary'%>
    <% else %>
      <%= link_to "Get a garantor", new_user_registration_path, class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>

<!-- Your features code -->
<div class="container features text-center padded">
  <div class ="row">
    <div>
      <h1>Get the flat that you deserve!</h1>
      <h3>9 out of 10 lessors in France require students to provide a French guarantor when applying for a lease. With <strong>Garantme</strong> as your guarantor, you can apply to the flat of your choice just like everyone else.</h3>
      <!-- features -->
      <div class="row">
        <!-- first feature -->
        <div class="col-xs-12 col-sm-4 col-md-4">
           <%= image_tag "curriculum.svg" %>
          <h2>APPLY</h2>
          <p>Build your online application and upload supporting documents in English</p>
        </div>

        <!-- second feature -->
        <div class="col-xs-12 col-sm-4 col-md-4">
          <%= image_tag "certificate.svg" %>
          <h2>GET CERTIFIED</h2>
          <p>Receive your Garantme guarantee in 12 hours</p>
        </div>

        <!-- third feature -->
        <div class="col-xs-12 col-sm-4 col-md-4">
            <%= image_tag "house.svg" %>
            <h2>FIND YOUR HOME</h2>
            <p>Increase your chance to find a flat with your certified digital application form in French and your guarantee</p>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="wrapper bg-light-gray show-container-padding">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-3">
        <div class="interview-show-top-left-container">
          <div class="interview-show-row">
            <div class="user-show-photo"><%= user_picture_avatar(current_user, "interview-show-avatar") %></div>
          </div>
          <div class="separator"></div>
          <div class="interview-show-row">

            <div class="user-show-full-name">
            <% if @user.first_name.nil? && @user.last_name.nil? %>
              <%= link_to "Please complete your profile", edit_user_path, class: "navbar-wagon-link" %>
            <% else %>
              <%=@user.first_name.capitalize %> <%=@user.last_name.capitalize %>
            <% end %>
            </div>
            <div class="user-show-organisation"> <%= @user.organisation.name.upcase unless @user.organisation.nil? %></div>

          </div>
          <%= link_to edit_user_path, class: "navbar-wagon-link" do %>
            <i class="fa fa-pencil fa-fw fa-pull-right"></i>
          <% end %>
        </div>
        <div class="interview-show-left-container">
          <div class="row">
            <div class="col-xs-3">
              <%= link_to create_pdf_path(@interview), method: :post, class: "navbar-wagon-link" do %>
                <i class="fa fa-share-square-o fa-3x" aria-hidden="true"></i></div>
              <% end %>
            <div class="col-xs-9">Create a pdf of all my informations</div>
          </div>
          <div class="separator"></div>
          <div class="row">
            <div class="col-xs-3">
              <%= link_to edit_user_path, class: "navbar-wagon-link" do %>
                <i class="fa fa-print fa-3x" aria-hidden="true"></i></div>
              <% end %>
            <div class="col-xs-9">Take you certificate on your next appartment visit</div>
          </div>
        </div>
        <div class="interview-show-bottom-left-container">
          <h4>Conversation</h4>
          <div class="messages-container">
          <% @messages.each do |message|%>
            <div class="message">
              <p class="message-sender"><%= message.sender.first_name %> <%= message.sender.last_name %></p>
              <p class="message-timestamp"><%= message.created_at %></p>
              <p class="message-content"><%= message.content %></p>
            </div>
          <% end %>
        </div>
        <div class="message-form-container">
          <form class="message-form" action="/">
            <div class="form-group">
              <textarea class="form-control" id="message-area" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-xs btn-primary">Submit</button>
          </form>
        </div>
        </div>
      </div>
      <!-- middle column -->
      <div class="col-xs-12 col-md-6">
        <div class="scroll-container">
          <div class="interview-show-middle-container">
            <h4>Strengthen my profile</h4>
            <div class="green-container">
              <div class="row">
                <div class="col-xs-2 vcenter">
                  <div class="show-icons">
                    <i class="fa fa-link fa-3x" aria-hidden="true"></i>
                  </div>
                </div>
                <div class="col-xs-10">
                  <h5>You have good reviews on other websites?</h5>
                  <p>Increase your reputation by importing reviews you've had on other websites (ex. airbnb)</p>
                </div>
              </div>
            </div>
            <div class="user-show-buttons">
              <div class="btn btn-primary float-right", data-toggle="modal" data-target="#addReviewsModal">Add reviews</div>
            </div>
          </div>
          <!-- myModal -->
          <%= render "addReviewsModal" %>
          <!-- My interview -->
          <div class="interview-show-middle-container">
            <h4>My interview</h4>
            <div class="green-container">
              <div class="row">
                <div class="col-xs-2">
                  <div class="show-icons">
                    <i class="fa fa-files-o fa-3x" aria-hidden="true"></i>
                  </div>
                </div>
                <div class="col-xs-10">
                  <h5>There has been a change to your situation?</h5>
                  <p>No worries we will take into consideration your adjustments</p>
                </div>
              </div>
            </div>
            <div class="user-show-buttons">
              <%= link_to "Update", edit_later_path(@interview), class: "btn btn-primary float-right"%>
            </div>
          </div>
          <!-- supporting docs -->
          <div class="interview-show-middle-container">
            <h4>Here are my supporting documents</h4>
            <div class="green-container supporting-docs">
              <% if @interview.id_card? %>
                <div class="id-card">
                  <%= cl_image_tag @interview.id_card.public_id + ".jpg", width: 100, height: 100, crop: :scale, class: "inline" %>
                </div>
              <% end %>
              <%= link_to edit_interview_path do %>
              <div class="green-dotted">
                <i class="fa fa-cloud-upload fa-3x" aria-hidden="true"></i>
              </div>
              <% end %>
            </div>
            <div class="user-show-buttons">
              <%= link_to "Manage", edit_user_path, class: "btn btn-primary float-right"%>
            </div>
          </div>
        </div>
      </div>
      <!-- third column -->
      <div class="col-xs-12 col-md-3">
        <div class="interview-show-right-container">
          <div class="interview-show-status">
          <!-- progress bar bootstrap -->
            <%= render "status_bar_logic" %>
          </div>
          <div class="column-content">
            <h5>We received your application</h5>
            <p>We will get back to you in 12 hours. In the meantime you can share, print and  strengthen your profile</p>
          </div>
        </div>
        <div class="interview-show-right-container">
          <div class="column-content">
            <% if @interview.has_found_apartment? %>
              <%= render "flat_info" %>
            <% else %>
              <%= render "add_flat_form" %>
            <% end %>
          </div>
        </div>
        <div class="interview-show-right-container">
          <div class="column-content">
            <h5>Your opinion matters</h5>
            <p>Please let us know what you think about us</p>
          </div>
          <div class="rating stars text-center">
              <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
          </div>
            <div class="contact-button text-center"><%= link_to "Contact Us", contact_path, class: "navbar-wagon-link"%> </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% content_for(:js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('.message-form').submit(function(e) {
          e.preventDefault();
          var content = "<div class=\"message\"><p class=\"message-sender\"><%= current_user.first_name %> <%= current_user.last_name %></p><p class=\"message-timestamp\">A few seconds ago</p><p class=\"message-content\">" + $("#message-area").val() + "</p></div>"
          $( ".messages-container" ).append(content);
          var url = "/messages/<%= @interview.id %>/create?message=" + encodeURI($('#message-area').val())
          $('#message-area').val('');
        $.ajax({
          type: "GET",
          url: url
        });
      })
    });
  <% end %>
<% end %>



<div class="add-flat-form">
  <h5>Have you found an appartment ?</h5>
  <p>Add the details of the appartment to your application</p>
  <%= button_to 'Yes', {controller: "interviews", action: 'update', has_found_apartment: true}, method: :patch, remote: true, class: "btn btn-primary save-step", id: "flat-found-btn"%>

  <div class="hidden" id="add-flat-form">
    <%= simple_form_for @interview do |f| %>
      <%= f.error_notification %>
      <%= f.input :address,  placeholder: "address", label: false %>
      <%= f.input :city, placeholder: "city", label: false %>
      <%= f.input :arrondissement, placeholder: "arrondissement", label: false %>
      <%= f.input :landlord_email, placeholder: "email of the landlord", label: false  %>
      <%= f.input :monthly_rent, placeholder: "monthly rent", label: false  %>
      <%= f.submit "Submit the flat", class: "btn btn-primary"%>
    <% end %>
  </div>

</div>
